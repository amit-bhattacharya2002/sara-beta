// Auth Database Schema (MongoDB)
// This file contains models for user authentication and application data

generator authClient {
    provider = "prisma-client-js"
    output   = "../node_modules/.prisma/auth-client"
}

datasource authDb {
    provider = "mongodb"
    url      = env("AUTH_DATABASE_URL")
}

// User authentication and profile data
model User {
    id        String   @id @map("_id")
    email     String   @unique
    name      String?
    password  String?
    role      String   @default("user")
    isActive  Boolean  @default(true)
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("users")
}

model SchemaDefinition {
    id         String @id @map("_id")
    schemaText String

    @@map("schema_definitions")
}
