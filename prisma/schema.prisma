// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

// Main data models based on the sample data
model Address {
    id                    String       @id @default(auto()) @map("_id") @db.ObjectId
    addressId             String       @unique // Original ID from the data
    isPrimary             Boolean      @default(false)
    doNotMail             Boolean      @default(false)
    startDate             String?
    endDate               String?
    addressBlock          String?
    city                  String?
    postCode              String?
    cart                  String?
    dpc                   String?
    lot                   String?
    sequence              String?
    dateAdded             DateTime?
    dateChanged           DateTime?
    ts                    DateTime?
    historicalStartDate   DateTime?
    historicalEndDate     DateTime?
    isConfidential        Boolean      @default(false)
    constituentId         String?
    addressTypeCodeId     String?
    countryId             String?
    stateId               String?
    addedById             String?
    changedById           String?
    relationshipId        String?
    doNotMailReasonCodeId String?
    Constituent           Constituent? @relation(fields: [constituentId], references: [id])

    @@map("addresses")
}

model Constituent {
    id            String    @id @default(auto()) @map("_id") @db.ObjectId
    constituentId String    @unique // Original ID from the data
    firstName     String?
    lastName      String?
    email         String?
    phone         String?
    dateOfBirth   DateTime?
    isActive      Boolean   @default(true)
    dateAdded     DateTime?
    dateChanged   DateTime?
    addresses     Address[]

    @@map("constituents")
}

model Gift {
    id                  String    @id @default(auto()) @map("_id") @db.ObjectId
    giftId              String    @unique // Original ID from the data
    giftDate            DateTime?
    giftAmount          String? // Changed from Decimal to String for MongoDB
    transactionType     String?
    giftType            String?
    paymentMethod       String?
    softCreditIndicator String?
    softCreditAmount    String? // Changed from Decimal to String for MongoDB
    sourceCode          String?
    designation         String?
    unit                String?
    purposeCategory     String?
    appeal              String?
    givingLevel         String?
    constituentId       String?
    dateAdded           DateTime?
    dateChanged         DateTime?

    @@map("gifts")
}

// Application models for the dashboard functionality
model SavedQuery {
    id            String   @id @default(auto()) @map("_id") @db.ObjectId
    userId        Int      @default(1)
    companyId     Int      @default(1)
    title         String
    queryText     String
    sqlText       String
    outputMode    Int      @default(1)
    visualConfig  String?
    panelPosition String?
    createdAt     DateTime @default(now())

    @@map("saved_queries")
}

model SavedDashboard {
    id              String   @id @default(auto()) @map("_id") @db.ObjectId
    userId          Int      @default(1)
    companyId       Int      @default(1)
    title           String
    quadrants       String // JSON string
    visualizations  String // JSON string
    sVisualizations String // JSON string
    topLeftTitle    String   @default("Sample Title")
    topRightTitle   String   @default("Sample Title")
    bottomTitle     String   @default("Sample Title")
    createdAt       DateTime @default(now())

    @@map("saved_dashboards")
}

model SchemaDefinition {
    id         String @id @default(auto()) @map("_id") @db.ObjectId
    schemaText String

    @@map("schema_definitions2")
}
